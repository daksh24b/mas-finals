# ============================================
# Digital Truth Guardian - Environment Variables
# ============================================
# Copy this file to .env and fill in your API keys

# ==================== API Keys ====================
# Google Gemini API Key (Required)
# Get yours at: https://aistudio.google.com/
TRUTH_GUARDIAN_GEMINI_API_KEY=your_gemini_api_key_here

# Tavily AI API Key (Required for external search)
# Get yours at: https://tavily.com/
TRUTH_GUARDIAN_TAVILY_API_KEY=your_tavily_api_key_here

# Qdrant Cloud API Key (Optional - only for Qdrant Cloud)
# Get yours at: https://cloud.qdrant.io/
TRUTH_GUARDIAN_QDRANT_API_KEY=

# ==================== Qdrant Settings ====================
# Qdrant server URL (default: local instance)
TRUTH_GUARDIAN_QDRANT_URL=http://localhost:6333

# Collection name for knowledge base
TRUTH_GUARDIAN_QDRANT_COLLECTION_NAME=knowledge_base

# ==================== Model Settings ====================
# Gemini Pro model for deep reasoning (Critic agent)
TRUTH_GUARDIAN_GEMINI_PRO_MODEL=gemini-2.0-flash

# Gemini Flash model for speed (Planner, Archivist)
TRUTH_GUARDIAN_GEMINI_FLASH_MODEL=gemini-2.0-flash-lite

# LLM temperature (lower = more deterministic)
TRUTH_GUARDIAN_LLM_TEMPERATURE=0.1

# ==================== Embedding Settings ====================
# Dense embedding model (gemini-embedding-001 for semantic similarity, 768d)
TRUTH_GUARDIAN_DENSE_EMBEDDING_MODEL=gemini-embedding-001

# Sparse embedding model (SPLADE for keyword matching)
TRUTH_GUARDIAN_SPARSE_EMBEDDING_MODEL=prithivida/Splade_PP_en_v1

# Dense embedding dimension
TRUTH_GUARDIAN_DENSE_EMBEDDING_DIM=768

# ==================== Search Settings ====================
# Maximum results from Tavily search
TRUTH_GUARDIAN_TAVILY_MAX_RESULTS=10

# Top-k results from Qdrant retrieval
TRUTH_GUARDIAN_RETRIEVER_TOP_K=5

# Hybrid search weight (0=sparse, 1=dense)
TRUTH_GUARDIAN_HYBRID_SEARCH_ALPHA=0.7

# Minimum confidence threshold for retrieval
TRUTH_GUARDIAN_CONFIDENCE_THRESHOLD=0.75

# ==================== Safety Settings ====================
# Maximum feedback loops before forced response
TRUTH_GUARDIAN_MAX_FEEDBACK_LOOPS=3

# Enable writing verified facts to knowledge base
TRUTH_GUARDIAN_ENABLE_MEMORY_WRITE=true

# Minimum source tier required for memory write (1=highest, 5=lowest)
TRUTH_GUARDIAN_MIN_SOURCE_TIER_FOR_MEMORY=2

# ==================== System Settings ====================
# Logging level (DEBUG, INFO, WARNING, ERROR)
TRUTH_GUARDIAN_LOG_LEVEL=INFO

# Debug mode (verbose logging)
TRUTH_GUARDIAN_DEBUG_MODE=false
